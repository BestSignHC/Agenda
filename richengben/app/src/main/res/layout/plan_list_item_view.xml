<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_list_item_bg_selector"
    android:paddingBottom="1.0dip"
    android:paddingTop="6.0dip" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:src="@mipmap/step_more" />

    <TextView
        android:id="@+id/child_plan_detail"
        android:text="plan_detail"
        android:layout_alignTop="@id/icon"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:textSize="20.0sp" />

    <TextView
        android:id="@+id/child_plan_remark"
        android:text="plan_remark"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/child_plan_detail"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:textSize="18.0sp" />

    <!--<CheckBox-->
        <!--android:id="@+id/child_plan_done"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_width="48dp"-->
        <!--android:layout_height="48dp" />-->

    <ImageButton
        android:id="@+id/child_plan_done"
        android:src="@mipmap/cb_uncheck"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/child_plan_end_date"
        android:layout_width="fill_parent"
        android:text="plan_endDate"
        android:layout_height="18.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/child_plan_remark"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="55.0dip"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:gravity="right|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:textSize="15.0sp" />

</RelativeLayout>